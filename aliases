alias aliases='source ~/.aliases'
alias grep='grep -i --color'
alias less='less -r -j4'
alias ls='ls --color=auto --group-directories-first'
alias lotr='ls -otrh'
alias lotra='lotr -a'
alias lsa='ls -a'
alias tree='tree  -L 1 -A -I node_modules -I .git'
alias treed='tree -d  -L 1 -A -I node_modules -I .git'
alias view='vim -R'
alias notify='/Users/anand/Downloads/terminal-notifier_1.2.0/terminal-notifier.app/Contents/MacOS/terminal-notifier'
alias chrome='open -a "Google Chrome"'
alias emacs='/usr/local/bin/emacsclient -n'
alias emacsserver='/usr/local/bin/emacs --daemon'
alias mark='open -a Marked\ 2'
alias skim='open -a Skim'
alias ag="ag --color-match '1;36'  --pager 'less -r'"
